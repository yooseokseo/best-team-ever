<title>Add New Medication</title>
</head>
<body>
  {{>navigation}}
  {{>nonscript}}
  <div id="add-new-med-content-container">
    <div class="add-new-med-box">
      <div class="box-title">
        Medicine Name
      </div>
      <div class="box-content flex-center">
        <!-- it should fetch all medicine info -->

        <input id="medicinename" class="med-name-input" type="text" name="" placeholder="Search(Autofill functionality will be here)">
      </div>
    </div>
    <div class="add-new-med-box">
      <div class="box-title">
        Dosage per pill
      </div>
      <div class="box-content flex-center">
        <div class="med-dosage-container">
          <input id="dosage" class="med-dosage-input" type="text" name="" placeholder="Dosage">
          <select class="amount-select" name="">
            <option value="mg">mg</option>
            <option value="g">g</option>
          </select>
        </div>

      </div>
    </div>
    <div class="add-new-med-box">
      <div class="box-title">
        Frequency
      </div>
      <div class="box-content-frequency flex-center">
        <div class="med-frequency-container">
          <input id="numPills" class="med-frequency-input" type="text" name="" placeholder="# of pills"> Pills
          <hr id="divider-hr">
          <div class="med-frequency-option">
            <div>
              Every
              <input id="recurrence_hour" class="med-frequency-every-input" type="text" name="" value=""> Hours
            </div>
            <div>
              <input id="times_per_day" class="med-frequency-every-input" type="text" name="" value=""> Times a day
            </div>
          </div>

        </div>


      </div>
    </div>
    <div class="add-new-med-box">
      <div class="box-title">
        Duration
      </div>
      <div class="box-content-duration flex-center">
        <div class="med-duration-container">
          <div class="med-duration-box">
            <div class="">
              Start Date
            </div>
             <input id="start_date" class="border-black duration-input" type="date" name="" value="">
          </div>
          <div class="med-duration-box">
            <div class="">
              Start Time
            </div>
             <input id="start_time" class="border-black duration-input" type="time" name="" value="">
          </div>
          <hr id="divider-hr">
          <div class="med-duration-box">
            <div class="">
              End Date
            </div>
             <input id="end_date" class="border-black duration-input" type="date" name="" value="">
          </div>
          <div class="med-duration-box">
            <div class="">
              End Time
            </div>
             <input id="end_time" class="border-black duration-input" type="time" name="" value="">
          </div>

        </div>


      </div>
    </div>
    <div class="add-new-med-box">
      <div class="box-title">
        Shape & Color
      </div>
      <div class="box-content-shape flex-center">
        <div class="med-shape-container">
          
          <div class="med-shape-box">
            
            <!-- med shape div -->
            <div class="med-shape">

              {{#each shapeList}}
                <div class="flex-center">
                  <img src="/images/icons/pills/{{type}}-white.png" alt="{{type}}" />
                </div>
              {{/each}}

              <div class="flex-center">
                <input class="test-input border-black" id="med_type" type="text">
              </div>

            </div>

            <!-- med color div -->
            <div class="med-color">
              <div class="flex-center">
                <input class="test-input border-black" id="med_color" type="text">
              </div>

              {{#each colorList}}
                <div class="flex-center">
                  <div class="color {{color}}">
                  </div>
                </div>
              {{/each}}
            </div>

          </div>


        </div>

      </div>

    </div>
    <div class="add-new-med-box">
      <div class="box-title">
        Note
      </div>
      <div class="box-content-note flex-center">
        <div class="med-note-container">
          <textarea class="med-note-text"></textarea>



        </div>


      </div>
    </div>
  </div>

  <div id="btns-container">
    <div class="btn flex-center border-right-black" onclick="backtopage();">
      Cancel
    </div>
    <div id="createMedicine" onclick="createMedicine({{profile_id}})" class="btn flex-center">
      Save
    </div>
  </div>
  <script src="/js/addNewMed.js"></script>
</body>
